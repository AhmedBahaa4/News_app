# Backend env example (DO NOT commit your real .env)

# MongoDB
MONGO_URI=mongodb+srv://USER:PASS@cluster.mongodb.net/newsApp?retryWrites=true&w=majority

# Server
PORT=5000

# Firebase Admin SDK
# Recommended for deployment: put the full JSON as a single line
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"..."}
FIREBASE_SERVICE_ACCOUNT=

# Alternative for local dev: path to a JSON file (keep it OUTSIDE git)
FIREBASE_SERVICE_ACCOUNT_PATH=

